<h2>Classes</h2>
<hr>
<a href="/admin/classes/new" class="btn btn-primary"><i class="far fa-plus"></i> New Class</a>
<br><br>
<div class="card">
    {{#if classes}}
        <ul class="list-group list-group-flush">
            {{#each classes as |class|}}
                <a href="/admin/class/{{class.url}}" class="list-group-item list-group-item-action">{{class.name}}</a>
            {{/each}}
        </ul>
    {{else}}
        No classes!
    {{/if}}
</div>
